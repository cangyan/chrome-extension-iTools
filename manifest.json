{
  "manifest_version": 2,
  "name": "程序员常用工具集",
  "description": "面向接口开发人员各种常用小工具集合.",
  "version": "1.0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "notifications",
    "activeTab",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "debugger"
  ],
  "content_scripts": [
    {
      "js": [
        "js/app.js"
      ],
      "css": [
        "css/main.css"
      ],
      "matches": [
        "http://*/*"
      ],
      "run_at": "document_end"
    }
  ]
}